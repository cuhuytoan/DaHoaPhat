<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" >
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(CMS.Website.Areas.Admin.Pages.Shared.AdminLayout)">
                <NotAuthorized>
                    <CMS.Website.Areas.Identity.Pages.Account.RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>           
                <LayoutView Layout="@typeof(CMS.Website.Areas.Admin.Pages.Shared.AdminLayout)">
                  <Error404 />
                </LayoutView>        
        </NotFound>
    </Router>
</CascadingAuthenticationState>
