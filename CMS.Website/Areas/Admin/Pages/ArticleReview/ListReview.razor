@page "/Admin/ArticleReview/ListReview"

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title m-b-0">Danh sách bài viết phản biện</h3>
            <p class="text-muted m-b-30 font-13"> Danh sách bài viết phản biện cập nhật </p>
            

            <div class="form-group row">
                <div class="col-xs-12 col-sm-12 col-md-6">
                    <div>
                        <input class="form-control m-r-10 m-b-10" type="search" @bind="keyword" placeholder="Từ khóa tìm kiếm..." />
                        <a class="btn btn-mat btn-success m-r-10 m-b-10" href="Admin/ArticleReview/ListReview?p=1&keyword=@keyword" style="color: #FFFFFF;"><i class="fa fa-search"></i>Tìm kiếm</a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="white-box">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="width:100px;">
                                        </th>
                                        <th>
                                            Tiêu đề
                                        </th>
                                        <th>
                                            Đợt phản biện
                                        </th>
                                        <th>
                                            Trạng thái
                                        </th>
                                        <th>
                                            Phản biện
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (lstArticleReview == null)
                                    {
                                        <p><em>Loading...</em></p>
                                    }
                                    else
                                    {
                                        @foreach (var item in lstArticleReview)
                                        {

                                <tr>
                                    <td>
                                        <img src="/data/article/mainimages/small/@item.Image" />
                                    </td>
                                    <td>
                                        <div style="font-weight: 700;">
                                            <a href="/Admin/ArticleReview/ReviewDetail?articleId=@item.Id">
                                                @item.Name
                                            </a>
                                        </div>
                                        <div>
                                            Đăng bởi <b>@item.Author</b> vào lúc
                                            <b>@item.CreateDate.Value.ToString("dd/MM/yyyy HH:mm")</b>
                                        </div>
                                        <div>
                                            Chuyên mục: <span style="font-weight: 700; color: #0094ff;">@item.ArticleCategoryName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="label badge badge-info"> @item.ArticleReviewName</span>
                                    </td>
                                    <td>
                                        <span class="label badge badge-success"> @item.ReviewStatusName</span>
                                    </td>
                                    <td style="text-align: center; padding-top: 30px;">
                                        <a href="/Admin/ArticleReview/ReviewDetail?articleId=@item.Id">
                                            <i class="fa fa-edit" style="color: #0094ff;"></i>
                                        </a>
                                    </td>
                                </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12">
                                <div class="dataTables_paginate paging_simple_numbers" id="simpletable_paginate" style="float:right">
                                    <ul class="pagination">
                                        <li class="paginate_button page-item previous" id="simpletable_previous">
                                            <a href="Admin/ArticleReview/ListReview?p=1&keyword=@keyword " aria-controls="simpletable" data-dt-idx="1" tabindex="0" class="page-link">
                                                <i class="fa fa-fast-backward"></i>
                                            </a>
                                        </li>
                                        <li class="paginate_button page-item previous" id="simpletable_previous">
                                            <a href="Admin/ArticleReview/ListReview?p=@(p > 1 ? p - 1 : 1)&keyword=@keyword " aria-controls="simpletable" data-dt-idx="@(p-1)" tabindex="0" class="page-link">
                                                <i class="fa fa-step-backward"></i>
                                            </a>
                                        </li>
                                        @for (var i = 1; i <= totalPages; i++)
                                        {

                                            <li class="paginate_button page-item @(i == currentPage ? "active" : "") " style="@((i > currentPage + 2) || (i < currentPage -2) ? "display:none" : "" )">
                                                <a href="Admin/ArticleReview/ListReview?p=@i&keyword=@keyword" aria-controls="simpletable" data-dt-idx="@i" tabindex="0" class="page-link">
                                                    @i
                                                </a>
                                            </li>
                                        }
                                        <li class="paginate_button page-item next" id="simpletable_next">
                                            <a href="Admin/ArticleReview/ListReview?p=@(p == totalPages ? totalPages : p + 1)&keyword=@keyword " aria-controls="simpletable" data-dt-idx="@(p+1)" tabindex="0" class="page-link">
                                                <i class="fa fa-step-forward"></i>
                                            </a>
                                        </li>
                                        <li class="paginate_button page-item next" id="simpletable_next">
                                            <a href="Admin/ArticleReview/ListReview?p=@totalPages&keyword=@keyword" aria-controls="simpletable" data-dt-idx="@totalPages" tabindex="0" class="page-link">
                                                <i class="fa fa-fast-forward"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>