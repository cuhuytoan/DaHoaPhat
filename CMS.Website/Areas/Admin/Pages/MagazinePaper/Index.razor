@page "/Admin/MagazinePaper/Index"
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title m-b-0">Danh sách tạp chí in</h3>
            <p class="text-muted m-b-30 font-13">Danh sách tạp chí in </p>
            <div class="form-group row" style="justify-content: left; margin-bottom: 10px;">
                <div class="col-xs-12 col-sm-12 col-md-6">
                    <a class="btn btn-mat btn-primary m-r-10 m-b-10" style="color: #FFFFFF;" href="/Admin/MagazinePaper/Edit"><i class="fa fa-plus-circle"></i>Thêm mới</a>
                    @if (user != null && (user.IsInRole("Quản trị hệ thống") || user.IsInRole("Lãnh đạo tòa soạn") || user.IsInRole("Thư ký tòa soạn")))
                    {
                        <a class="btn btn-mat btn-success m-r-10 m-b-10" style="color: #FFFFFF;" @onclick="@(() => OnPostDemand(2))"><i class="fa fa-play"></i>Duyệt phản biện</a>
                        <a class="btn btn-mat btn-warning m-r-10 m-b-10" style="color: #FFFFFF;" @onclick="@(() => OnPostDemand(3))"><i class="fa fa-play-circle"></i>Không duyệt</a>
                    }
                </div>
            </div>

            <div class="form-group row">
                <div class="col-xs-12 col-sm-12 col-md-6">
                    <div>
                        <input class="form-control m-r-10 m-b-10" type="search" @bind="keyword" placeholder="Từ khóa tìm kiếm..." />
                        <a class="btn btn-mat btn-success m-r-10 m-b-10" href="Admin/MagazinePaper/Index?p=1&keyword=@keyword" style="color: #FFFFFF;"><i class="fa fa-search"></i>Tìm kiếm</a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="white-box">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="width:20px;">
                                            <input type="checkbox" class="check" @onchange="args => OnCheckBoxChange(true,0,args.Value)" />

                                        </th>
                                        <th>
                                            Tiêu đề
                                        </th>
                                        <th>
                                            Mô tả ngắn
                                        </th>
                                        <th>
                                            Trạng thái
                                        </th>
                                        <th>
                                            Chi tiết
                                        </th>
                                        <th>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (lstMagazinePaper == null)
                                    {
                                        <p><em>Loading...</em></p>
                                    }
                                    else
                                    {
                                        @foreach (var item in lstMagazinePaper)
                                        {
                                            bool Checked = false;
                                            if (listArticleSelected.Contains(item.Id))
                                            {
                                                Checked = true;
                                            }
                                            <tr>
                                                <td>
                                                    <input type="checkbox" class="check" checked="@Checked" @onchange="args => OnCheckBoxChange(false,item.Id,args.Value)">
                                                </td>
                                                <td>
                                                    <div style="font-weight: 700;">
                                                        <a href="/Admin/MagazinePaper/Edit?MagazinePaperId=@item.Id">
                                                            @item.Name
                                                        </a>
                                                    </div>
                                                    <div>
                                                        Đăng bởi <b>@item.LastEditName</b> vào lúc
                                                        <b>@item.CreateDate.Value.ToString("dd/MM/yyyy HH:mm")</b>
                                                    </div>
                                                </td>
                                                <td>
                                                    @item.Description
                                                </td>
                                                <td>
                                                    <span class="label badge badge-success">@item.StatusName</span>
                                                </td>
                                                <td>
                                                    <a href="/Admin/MagazinePaper/Preview?MagazinePaperId=@item.Id">
                                                        <i class="fa fa-eye" style="color: #0094ff;"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    @if (user != null && (user.IsInRole("Quản trị hệ thống") || user.IsInRole("Lãnh đạo tòa soạn") || user.IsInRole("Thư ký tòa soạn")))
                                                    {
                                                        <a @onclick="(() => DeleteMagazinePaper(item.Id))"><i class="fa fa-trash"></i></a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12">
                                <div class="dataTables_paginate paging_simple_numbers" id="simpletable_paginate" style="float:right">
                                    <ul class="pagination">
                                        <li class="paginate_button page-item previous" id="simpletable_previous">
                                            <a href="Admin/MagazinePaper/Index?p=1&keyword=@keyword " aria-controls="simpletable" data-dt-idx="1" tabindex="0" class="page-link">
                                                <i class="fa fa-fast-backward"></i>
                                            </a>
                                        </li>
                                        <li class="paginate_button page-item previous" id="simpletable_previous">
                                            <a href="Admin/MagazinePaper/Index?p=@(p > 1 ? p - 1 : 1)&keyword=@keyword " aria-controls="simpletable" data-dt-idx="@(p-1)" tabindex="0" class="page-link">
                                                <i class="fa fa-step-backward"></i>
                                            </a>
                                        </li>
                                        @for (var i = 1; i <= totalPages; i++)
                                        {

                                            <li class="paginate_button page-item @(i == currentPage ? "active" : "") " style="@((i > currentPage + 2) || (i < currentPage -2) ? "display:none" : "" )">
                                                <a href="Admin/MagazinePaper/Index?p=@i&keyword=@keyword" aria-controls="simpletable" data-dt-idx="@i" tabindex="0" class="page-link">
                                                    @i
                                                </a>
                                            </li>
                                        }
                                        <li class="paginate_button page-item next" id="simpletable_next">
                                            <a href="Admin/MagazinePaper/Index?p=@(p == totalPages ? totalPages : p + 1)&keyword=@keyword " aria-controls="simpletable" data-dt-idx="@(p+1)" tabindex="0" class="page-link">
                                                <i class="fa fa-step-forward"></i>
                                            </a>
                                        </li>
                                        <li class="paginate_button page-item next" id="simpletable_next">
                                            <a href="Admin/MagazinePaper/Index?p=@totalPages&keyword=@keyword" aria-controls="simpletable" data-dt-idx="@totalPages" tabindex="0" class="page-link">
                                                <i class="fa fa-fast-forward"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<ConfirmBase @ref="DeleteConfirmation" ConfirmationChanged="ConfirmDelete_Click"
             ConfirmationMessage=@($"Bạn có chắc chắn muốn xóa?") ConfirmationTitle=@("Xác nhận xóa") />