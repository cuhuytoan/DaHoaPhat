    <!-- ===== Top-Navigation-End ===== -->
    @code{
        public List<SpUserNotifySearchResult> lstUserNoti { get; set; } = new List<SpUserNotifySearchResult>();
        public int? totalUnread { get; set; }
        private HubConnection hubConnection;
        private List<string> messages = new List<string>();
        [CascadingParameter]
        private Task<AuthenticationState> authenticationStateTask { get; set; }
        ClaimsPrincipal user;
        string userId { get; set; }
        public string avatar { get; set; } = "noimages.png";


        protected override async Task OnInitializedAsync()
        {
            //get claim principal
            var authState = await authenticationStateTask;
            user = authState.User;
            userId = user.FindFirstValue(ClaimTypes.NameIdentifier);

            hubConnection = new HubConnectionBuilder()
                .WithUrl(NavigationManager.ToAbsoluteUri("/notificationHubs"), options => {
                    options.Headers.Add("USERID", userId);
                })
                .Build();

            hubConnection.On<string, string,string,string,string>("ReceiveMessage", (toUserId, subject, content,url, imageUrl) =>
            {
                //ToastMessage
                if(this.userId == toUserId)
                {
                    toastService.ShowToast(ToastLevel.Info, $"{subject}", "Bạn có thông báo mới");
                    lstUserNoti.Insert(0, new SpUserNotifySearchResult
                    {
                        Subject = subject,
                        Content = content,
                        URL = url,
                        CreateDate = DateTime.Now
                    }) ;
                    totalUnread += 1;
                    StateHasChanged();
                }
            });


            await hubConnection.StartAsync();

            await InitData();

        }
        private async Task InitData()
        {
            var profiles = await Repository.AspNetUsers.AspNetUserProfilesGetByUserId(userId);
            if (profiles != null)
            {
                avatar = profiles.AvatarUrl;
            }
            var result = await Repository.UserNoti.GetAllNoti(null, userId, null, 3, 1);
            lstUserNoti = result.Items;
            totalUnread = result.TotalSize;
        }

        void test()
        {
            hubConnection.SendAsync("SendNotification", userId, "Gửi bài viết thành công", $"Bạn đã gửi bài viết <b</b> tới tòa soạn thành công", "/Admin/Article");
        }

        public async ValueTask DisposeAsync()
        {
            await hubConnection.DisposeAsync();
        }
    }